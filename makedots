#!/bin/bash

# michael cousins
# july 7, 2013
# shell script to copy my dotfiles to my home directory

# dotfile directory is this one
DOTLOC=~/dotfiles
DOTOLD=~/dotfiles_old
DOTNEW=~

# ignore any files with extensions
IGNORE="(.+\.[:alnum:]+)"
# also ignore all os specific files
IGNORE+="|(_linux)|(_mac)|(_windows)"
# os specific files
if [[ $OSTYPE =~ "darwin" ]]
    then
    CUT="|(_mac)"
elif [[ $OSTYPE =~ "linux" ]]
    then
    CUT="|(_linux)"
elif [[ $OSTYPE =~ "msys" ]]
    then
    CUT="|(_windows)"
else
    CUT=""
fi
# cut what we want out of ignore
IGNORE=${IGNORE/$CUT/}
echo "$IGNORE"

# make sure I want to copy new dotfiles in
echo -n "hey man. want some dotfiles? (y/n): "
read r
if [ $r ]
    then
    if [ ${r:0:1} == 'y' ] || [ ${r:0:1} == 'Y' ]
        then
        echo "i knew you were cool."

        # check for dotfiles_old directory
        if [ ! -d $DOTOLD ]
            then
            echo "creating folder for old dotfiles"
            mkdir $DOTOLD
        fi
        # save old dotfiles and symlink the new ones in
        echo "backing up old dotfiles to $DOTOLD and symlinking new ones to $DOTNEW"
        for f in $DOTLOC/*
        do
            # get filename
            FILE=`basename $f`
            # exclude files
            if [[ ! $FILE =~ $IGNORE ]]
                then
                # check for os specific files
                THIS=`basename $0`
                # check to make sure the file is not this script
                if [ $FILE != $THIS ]
                    then
                    # check if this dotfile already exists and back it up
                    if [ -f DOTNEW/.$FILE ]
                        then
                        mv -f $DOTNEW/.$FILE $DOTOLD/.$FILE
                        echo "backed up .$FILE"
                    fi
                    # symlink the new one in
                    ln -sf $f $DOTNEW/.$FILE
                    echo "symlinked $FILE"
                fi
            fi
        done
    else
        echo "come back when you wanna have some fun."
    fi
else
    echo "what are you, a cop or something?"
fi
